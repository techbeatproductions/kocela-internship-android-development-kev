<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Onboarding">

    <androidx.cardview.widget.CardView
        android:id="@id/onboardingimgleftContainer"
        android:layout_width="16dp"
        android:layout_height="288dp"
        android:layout_marginTop="144dp"
        >

        <ImageView
            android:id="@+id/onboardingimgleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/onboardingimgleft" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/onboardingimgcenterContainer"
        android:layout_width="288dp"
        android:layout_height="336dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"

        android:foregroundGravity="center"
        app:cardCornerRadius="12dp"

        android:layout_toRightOf="@id/onboardingimgleftContainer">

        <ImageView
            android:id="@+id/onboardingimgcenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="onboarding center image"
            app:srcCompat="@drawable/onboardingimgcenter" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@id/onboardingimgrightContainer"
        android:layout_width="16dp"
        android:layout_height="288dp"
        android:layout_marginTop="144dp"
        android:layout_marginStart="28dp"
        app:cardCornerRadius="12dp"
        android:layout_toRightOf="@id/onboardingimgcenterContainer"
       >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/onboardingimgright" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/steps"
        android:layout_width="56dp"
        android:layout_height="8dp"
        android:src="@drawable/steps"
        android:layout_below="@id/onboardingimgcenterContainer"
        android:layout_marginTop="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="160dp"
        />

    <TextView
        android:id="@+id/firstToKnowText"
        android:layout_width="216dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="79dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/sfsemibold"
        android:lineHeight="32dp"
        android:text="@string/first_to_know"
        android:textAlignment="center"
        android:textColor="@color/black_primary"
        android:textSize="24sp"

        android:layout_below="@id/steps" />

    <TextView
        android:id="@+id/allnewstextOnboarding"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:text="@string/all_news_in_one_place_be_the_first_to_know_last_news"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/gray_primary"
        android:layout_below="@id/firstToKnowText"/>

    <Button
        android:id="@+id/next_onboarding_button"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/allnewstextOnboarding"

        android:text="@string/next"
        android:textColor="@color/white"

        android:background="@drawable/roundshapebutton"
                />

</RelativeLayout>