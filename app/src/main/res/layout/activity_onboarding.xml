<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".activity.Onboarding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/onboardingimgleftcontainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="74dp"
                android:src="@drawable/onboardingimgleft" />




            <ImageView
                android:id="@+id/onboardingimgcentercontainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_toEndOf="@id/onboardingimgleftcontainer"

                android:contentDescription="@string/onboarding_center_image"
                app:srcCompat="@drawable/onboardingimgcenter" />





            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="74dp"
                android:layout_toRightOf="@id/onboardingimgcentercontainer"
                android:src="@drawable/onboardingimgright" />


        <ImageView
            android:id="@+id/steps"
            android:layout_width="56dp"
            android:layout_height="8dp"
            android:src="@drawable/steps"
            android:layout_below="@id/onboardingimgcentercontainer"
            android:layout_marginTop="30dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="160dp"
            />

        <TextView
            android:id="@+id/firstToKnowText"
            android:layout_width="216dp"
            android:layout_height="32dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="79dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/sfsemibold"


            android:text="@string/first_to_know"
            android:textAlignment="center"
            android:textColor="@color/black_primary"
            android:textSize="24sp"

            android:layout_below="@id/steps" />

        <TextView
            android:id="@+id/allnewstextonboarding"
            android:layout_width="216dp"
            android:layout_height="48dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:text="@string/all_news_in_one_place_be_the_first_to_know_last_news"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/gray_primary"
            android:layout_below="@id/firstToKnowText"/>

        <Button
            android:id="@+id/next_onboarding_button"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/allnewstextonboarding"

            android:text="@string/next"
            android:textColor="@color/white"

            android:background="@drawable/roundshapebutton"
            />



    </RelativeLayout>



</ScrollView>