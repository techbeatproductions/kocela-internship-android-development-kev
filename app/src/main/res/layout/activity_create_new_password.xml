<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_new_password"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/create_new_password_txt_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/sfsemibold"
                android:text="@string/create_new_password"
                android:textColor="@color/black_primary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/you_can_create_new_txt_view"
                android:layout_width="336dp"
                android:layout_height="48dp"
                android:layout_below="@id/create_new_password_txt_view"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfregular"
                android:text="@string/you_can_create_a_new_password_please_dont_forget_it_too"
                android:textColor="@color/gray_primary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newTextPassword"
                android:layout_width="336dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/rounded_corner_view"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="24dp"
                android:ems="10"
                android:hint="@string/new_password_hint"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:layout_below="@id/you_can_create_new_txt_view"
                android:textColorHint="@color/gray_primary"
                />

            <EditText
                android:id="@+id/repeatnewTextPassword"
                android:layout_width="336dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/rounded_corner_view"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="24dp"
                android:ems="10"
                android:hint="@string/repeat_new_password_hint"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:layout_below="@id/newTextPassword"
                android:textColorHint="@color/gray_primary"/>

            <Button
                android:id="@+id/create_new_password_button"
                android:layout_width="336dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/roundshapebutton"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_below="@id/repeatnewTextPassword"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="290dp"
                android:orientation="horizontal"
                android:layout_below="@id/create_new_password_button">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfmedium"
                    android:text="@string/didn_t_receive_an_email"
                    android:textColor="@color/black_lighter"
                    android:textSize="16sp"

                    />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sfmedium"
                    android:text="@string/send_again"
                    android:textColor="@color/black_primary"
                    android:textSize="16sp" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</ScrollView>